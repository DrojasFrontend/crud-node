<% include partials/_header %>

<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= task._id %>" method="POST">
            <div class="from-group mb-2">
              <input type="text" name="title" placeholder="Inser a Title" class="form-control" value="<%= task.title %>">
            </div>
            <div class="from-group">
              <textarea name="description" placeholder="Insert a Description" class="form-control"><%= task.description%>
              </textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer%>